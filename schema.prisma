generator client {
  provider               = "prisma-client"
  output                 = "./src/database/prisma-client"
  previewFeatures        = ["driverAdapters"]
  generatedFileExtension = "ts"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/dev.db"
}

model plants {
  id              Int     @id @default(autoincrement())
  code            String  @unique(map: "sqlite_autoindex_plants_1")
  latin           String
  name            String
  type            String?
  zone            String?
  native          String?
  droughtTolerant Boolean?
  floodTolerant   Boolean?
  height          Float?
  spread          Float?
  saltTolerance   String?
  family          String?
  genus           String?
  species         String?
  functionalGroup String?
  sunTolerance             String?
  bloom         String?
}
