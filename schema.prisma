generator client {
  provider               = "prisma-client"
  output                 = "./src/database/prisma-client"
  previewFeatures        = ["driverAdapters"]
  generatedFileExtension = "ts"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/dev.db"
}

model plants {
  id              Int     @id @default(autoincrement())
  code            String  @unique(map: "sqlite_autoindex_plants_1")
  type            String?

  family          String?
  genus           String?
  species         String?
  cultivar        String?
  note            String? 
  synonym         String? 
  commonName      String? 

  zone            String?
  native          String?
  height          Float?
  spread          Float?
  plantationDistance    Float?
  
  groundSaltTolerance   String?
  airSaltTolerance      String?
  soilHumidity     String?
  soilRichness     String?
  soilAcidity      String?
  sunTolerance    String?

  bloom           String?
  functionalGroup String?
  grouping        String?

  remarks         String?

  vascanID        String?
  hydroID         String?
  referenceUrl    String?
}
